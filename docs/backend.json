{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application. Can be a doctor, patient, or admin.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["doctor", "patient", "admin"] },
        "avatarUrl": { "type": "string", "format": "uri" },
        "age": { "type": "number" },
        "gender": { "type": "string", "enum": ["Male", "Female", "Other"] },
        "conditions": { "type": "array", "items": { "type": "string" } },
        "medicalHistory": { "type": "string" },
        "status": { "type": "string", "enum": ["Stable", "Critical", "Needs Review"] },
        "lastSeen": { "type": "string", "format": "date-time" },
        "deviceId": { "type": "string", "description": "The ID of the IoT device assigned to the user." },
        "calibrationData": { "type": "object", "description": "Stores user-specific device calibration constants." }
      },
      "required": ["uid", "email", "role", "displayName"]
    },
    "vitals": {
      "title": "Vitals",
      "description": "A single time-series reading of raw sensor data.",
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "Glucose": { "type": "number", "description": "Blood glucose level in mg/dL." },
        "Systolic": { "type": "number", "description": "Systolic blood pressure." },
        "Diastolic": { "type": "number", "description": "Diastolic blood pressure." },
        "Heart Rate": { "type": "number", "description": "Heart rate in beats per minute (BPM)." },
        "SPO2": { "type": "number", "description": "Blood oxygen saturation percentage (SpO2)." },
        "Temperature": { "type": "number", "description": "Body temperature." },
        "sqi": { "type": "number", "description": "Signal Quality Index from the sensor." }
      },
      "required": ["timestamp", "Glucose", "Systolic", "Diastolic", "Heart Rate", "SPO2"]
    },
    "healthEstimation": {
      "title": "Health Estimation",
      "description": "AI-powered estimation of health indicators based on sensor data.",
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "estimatedBpCategory": { "type": "string", "enum": ["Normal", "Elevated", "High", "Low"]},
        "glucoseTrend": { "type": "string", "enum": ["Normal", "Elevated", "Risky"] },
        "confidenceScore": { "type": "number", "description": "The AI model's confidence in the estimation (0-1)." },
        "reasoning": { "type": "string", "description": "A brief explanation from the model." }
      },
      "required": ["timestamp", "estimatedBpCategory", "glucoseTrend", "confidenceScore"]
    },
    "alert": {
        "title": "Alert",
        "description": "An alert for a patient, triggered by sensor readings or AI estimations.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "patientName": { "type": "string" },
            "message": { "type": "string" },
            "severity": { "type": "string", "enum": ["Critical", "High", "Medium", "Low", "Predictive"] },
            "timestamp": { "type": "string", "format": "date-time" },
            "isRead": { "type": "boolean" }
        },
        "required": ["patientId", "message", "severity", "timestamp"]
    },
    "device": {
      "title": "Device",
      "description": "A monitoring device.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Inactive", "Maintenance"] },
        "assignedTo": { "type": "string", "description": "UID of the user it's assigned to." },
        "lastSync": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "type", "status"]
    },
    "appointment": {
        "title": "Appointment",
        "description": "An appointment for a patient.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "doctorId": { "type": "string" },
            "doctorName": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "type": { "type": "string" }
        },
        "required": ["patientId", "doctorId", "date", "type"]
    },
    "deviceCommand": {
        "title": "Device Command",
        "description": "A command to be sent to a device.",
        "type": "object",
        "properties": {
            "command": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["pending", "sent", "acknowledged"]}
        },
        "required": ["command", "timestamp", "status"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores all user profile information in GridDB Cloud, including patients and doctors."
    },
    "/users/{userId}/vitals/{vitalId}": {
      "schema": { "$ref": "#/entities/vitals" },
      "description": "A time-series collection of raw vitals data for a specific patient, stored in GridDB Cloud."
    },
    "/users/{userId}/estimations/{estimationId}": {
      "schema": { "$ref": "#/entities/healthEstimation" },
      "description": "A time-series collection of AI-generated health estimations for a patient, stored in GridDB Cloud."
    },
    "/alerts/{alertId}": {
        "schema": { "$ref": "#/entities/alert" },
        "description": "Stores patient alerts generated by the system in GridDB Cloud."
    },
    "/devices/{deviceId}": {
      "schema": { "$ref": "#/entities/device" },
      "description": "Stores information about registered IoT devices in GridDB Cloud."
    },
    "/appointments/{appointmentId}": {
        "schema": { "$ref": "#/entities/appointment" },
        "description": "Stores appointment details for patients in GridDB Cloud."
    },
    "/deviceCommands/{deviceId}": {
        "schema": { "$ref": "#/entities/deviceCommand" },
        "description": "Stores commands to be sent to IoT devices, brokered through GridDB Cloud."
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    // Doctors can read all patient data, patients can only read their own
    match /patients/{patientId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'
                  || request.auth.uid == patientId;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }

    // Vitals can be read by the patient or any doctor. Vitals can only be written by the patient themselves (simulating device upload).
    match /patients/{patientId}/vitals/{vitalId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'
                  || request.auth.uid == patientId;
      allow write: if request.auth.uid == patientId;
    }

    // Estimations can be read by the patient or any doctor. Estimations can be written by the user who triggered the analysis.
    match /patients/{patientId}/estimations/{estimationId} {
       allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'
                  || request.auth.uid == patientId;
      allow write: if request.auth.uid == patientId;
    }

    // Doctors can read all alerts, patients can only read alerts linked to them.
    // Alerts are created by the system (via user-triggered action).
     match /alerts/{alertId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'
                  || resource.data.patientId == request.auth.uid;
      allow create: if request.resource.data.patientId == request.auth.uid; // Allow user action to create alert for themself
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'; // Doctors can mark as read
    }

    // Doctors and admins can read device commands for debugging.
    // Patients can create commands for their own assigned device.
    match /deviceCommands/{deviceId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['doctor', 'admin'];
      allow create: if request.auth.uid != null &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.deviceId == deviceId;
    }
  }
}

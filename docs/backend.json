{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "role": { "type": "string", "enum": ["doctor", "patient", "admin"] },
        "deviceId": { "type": "string", "description": "The ID of the IoT device assigned to the user." }
      },
      "required": ["uid", "email", "role"]
    },
    "patient": {
        "title": "Patient",
        "description": "A patient record.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "age": { "type": "number" },
            "gender": { "type": "string" },
            "conditions": { "type": "array", "items": { "type": "string" } }
        }
    },
    "alert": {
        "title": "Alert",
        "description": "An alert for a patient.",
        "type": "object",
        "properties": {
            "patientId": { "type": "string" },
            "message": { "type": "string" },
            "severity": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" }
        }
    },
    "deviceCommand": {
        "title": "Device Command",
        "description": "A command to be sent to a device.",
        "type": "object",
        "properties": {
            "command": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["pending", "sent", "acknowledged"]}
        },
        "required": ["command", "timestamp", "status"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores public user profile information."
    },
    "/patients/{patientId}": {
        "schema": { "$ref": "#/entities/patient" },
        "description": "Stores patient health records."
    },
    "/alerts/{alertId}": {
        "schema": { "$ref": "#/entities/alert" },
        "description": "Stores patient alerts."
    },
    "/deviceCommands/{deviceId}": {
        "schema": { "$ref": "#/entities/deviceCommand" },
        "description": "Stores commands to be sent to IoT devices."
    }
  }
}
